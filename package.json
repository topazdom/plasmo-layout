{
  "name": "plasmo-layout",
  "version": "1.0.3",
  "description": "Automate HTML layout generation for Plasmo browser extension components",
  "type": "module",
  "main": "dist/main.js",
  "types": "dist/main.d.ts",
  "bin": {
    "plasmo-layout": "./dist/cli/index.js"
  },
  "license": "MIT",
  "author": {
    "name": "Topazdom Technologies Limited",
    "email": "developers@topazdom.com",
    "url": "https://topazdom.com"
  },
  "contributors": [
    {
      "name": "David Nzagha",
      "email": "nzaghad@topazdom.com",
      "url": "https://nzaghadavid.com"
    }
  ],
  "scripts": {
    "start": "node dist/main.js",
    "start:dev": "nodemon --ext js,ts,json,env --exec 'node --experimental-specifier-resolution=node --loader ts-node/esm' src/main.ts",
    "prepare": "husky",
    "build": "tsc --project tsconfig.build.json",
    "build:clean": "rm -rf tsconfig.build.tsbuildinfo && rm -rf ./dist",
    "test": "jest --detectOpenHandles",
    "test:coverage": "npm run test -- --coverage",
    "test:ci": "npm run test -- --colors --coverage --ci",
    "lint": "eslint .",
    "format": "prettier \"./**\" --write --ignore-unknown",
    "format:check": "prettier \"./**\" --ignore-unknown --check",
    "semantic-release": "semantic-release",
    "semantic-release:dry": "semantic-release --dry-run"
  },
  "keywords": [
    "plasmo",
    "plasmo-framework",
    "browser-extension",
    "layout",
    "html-generation",
    "cli"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/topazdom/plasmo-layout.git"
  },
  "bugs": {
    "url": "https://github.com/topazdom/plasmo-layout/issues"
  },
  "homepage": "https://github.com/topazdom/plasmo-layout#readme",
  "dependencies": {
    "@babel/parser": "^7.23.0",
    "@babel/traverse": "^7.23.0",
    "chokidar": "^3.5.3",
    "commander": "^11.1.0",
    "consola": "^3.2.3",
    "fs-extra": "^11.2.0",
    "glob": "^10.3.10",
    "micromatch": "^4.0.5",
    "tslib": "^2.8.1"
  },
  "peerDependencies": {
    "edge.js": "^6.0.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "peerDependenciesMeta": {
    "edge.js": {
      "optional": true
    },
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@jest/globals": "^30.2.0",
    "@jest/types": "^30.2.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.1",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "cross-env": "^10.1.0",
    "eslint": "^9.39.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-tsdoc": "^0.5.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "lint-staged": "^16.2.7",
    "nodemon": "^3.1.11",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "@types/babel__traverse": "^7.20.4",
    "@types/fs-extra": "^11.0.4",
    "@types/micromatch": "^4.0.6"
  }
}
